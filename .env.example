# Configuración de DJConnect
# Copia este archivo como .env y completa con tus valores reales

# Base de datos MongoDB
MONGO_URI=mongodb://localhost:27017/djconnect

# Secreto para JWT (genera uno seguro)
JWT_SECRET=tu_secreto_jwt_super_seguro_aqui

# Credenciales de Spotify API
SPOTIFY_CLIENT_ID=tu_spotify_client_id
SPOTIFY_CLIENT_SECRET=tu_spotify_client_secret

# Configuración de SendGrid para emails
SENDGRID_API_KEY=tu_sendgrid_api_key

# URL base de la aplicación
APP_BASE_URL=https://tu-dominio.com

# Puerto del servidor (opcional, por defecto 3000)
PORT=3000
