# Configuración de la Base de Datos MongoDB
MONGO_URI=mongodb://localhost:27017/djconnect

# Clave Secreta para JWT (puedes generar una aleatoria)
JWT_SECRET=tu_clave_secreta_muy_segura_aqui

# Credenciales de Spotify API
# Obtén las tuyas en: https://developer.spotify.com/dashboard/
SPOTIFY_CLIENT_ID=tu_spotify_client_id
SPOTIFY_CLIENT_SECRET=tu_spotify_client_secret

# SendGrid API Key para envío de emails
# Obtén la tuya en: https://sendgrid.com/
SENDGRID_API_KEY=tu_sendgrid_api_key

# URL base de tu aplicación
APP_BASE_URL=https://djapp.duckdns.org
